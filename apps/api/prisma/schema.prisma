// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  POWER_USER
  ADMIN
}

enum SharePermission {
  READ
  WRITE
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

enum AttachmentType {
  INVOICE
  WARRANTY
  OTHER
}

model User {
  userId    Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Inventaire possédé
  articlesOwned   Article[]   @relation("UserArticles")
  warrantiesOwned Garantie[]  @relation("UserWarranties")
  alertsOwned     Alerte[]    @relation("UserAlerts")

  // Partage
  shareInvites ShareInvite[] @relation("UserShareInvites") // owner (créateur)
  sharesGiven  InventoryShare[] @relation("SharesGiven")   // owner -> target
  sharesReceived InventoryShare[] @relation("SharesReceived") // target -> owner

  // Audit (optionnel)
  auditLogs AuditLog[]
  attachments Attachment[]
}

model Article {
  articleId          Int      @id @default(autoincrement())
  ownerUserId        Int
  articleNom         String   @db.VarChar(100)
  articleModele      String   @db.VarChar(100)
  articleDescription String?  @db.VarChar(255)
  productImageUrl    String?  @db.VarChar(255)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner    User    @relation("UserArticles", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  garantie Garantie?
  alertes  Alerte[]
  pieces   Attachment[]

  @@index([ownerUserId])
  @@index([articleNom, articleModele])
}

model Garantie {
  garantieId        Int      @id @default(autoincrement())
  ownerUserId       Int
  garantieArticleId Int      @unique // 1 garantie par article (MVP)
  garantieNom       String   @db.VarChar(100)
  garantieDateAchat DateTime
  garantieDuration  Int      // en mois
  garantieFin       DateTime
  garantieIsValide  Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User    @relation("UserWarranties", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  article Article @relation(fields: [garantieArticleId], references: [articleId], onDelete: Cascade)
  alertes Alerte[]
  pieces  Attachment[]

  @@index([ownerUserId])
  @@index([garantieFin])
}

model Alerte {
  alerteId          Int      @id @default(autoincrement())
  ownerUserId       Int
  alerteNom         String   @db.VarChar(100)
  alerteDate        DateTime
  alerteDescription String?  @db.VarChar(255)

  // Liens (au moins un des deux)
  alerteGarantieId Int?
  alerteArticleId  Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner   User     @relation("UserAlerts", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  garantie Garantie? @relation(fields: [alerteGarantieId], references: [garantieId], onDelete: Cascade)
  article  Article?  @relation(fields: [alerteArticleId], references: [articleId], onDelete: Cascade)

  @@index([ownerUserId])
  @@index([alerteDate])
  @@index([alerteGarantieId])
  @@index([alerteArticleId])
}

model Attachment {
  attachmentId Int            @id @default(autoincrement())
  ownerUserId  Int
  type         AttachmentType @default(INVOICE)

  // Stockage (S3/Cloud) -> URL, ou stockage DB -> base64 (déconseillé)
  fileName     String         @db.VarChar(255)
  mimeType     String         @db.VarChar(100)
  fileSize     Int
  fileUrl      String         @db.VarChar(500)

  // Lien optionnel vers article/garantie
  articleId   Int?
  garantieId  Int?

  createdAt DateTime @default(now())

  owner    User     @relation(fields: [ownerUserId], references: [userId], onDelete: Cascade)
  article  Article? @relation(fields: [articleId], references: [articleId], onDelete: Cascade)
  garantie Garantie? @relation(fields: [garantieId], references: [garantieId], onDelete: Cascade)

  @@index([ownerUserId])
  @@index([articleId])
  @@index([garantieId])
}

model InventoryShare {
  inventoryShareId Int             @id @default(autoincrement())
  ownerUserId      Int
  targetUserId     Int
  permission       SharePermission @default(READ)
  active           Boolean         @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner  User @relation("SharesGiven", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  target User @relation("SharesReceived", fields: [targetUserId], references: [userId], onDelete: Cascade)

  @@unique([ownerUserId, targetUserId], map: "uq_share_owner_target")
  @@index([ownerUserId])
  @@index([targetUserId])
}

model ShareInvite {
  shareInviteId Int          @id @default(autoincrement())
  ownerUserId   Int
  email         String       @db.VarChar(255)
  token         String       @unique @db.VarChar(128)
  status        InviteStatus @default(PENDING)
  permission    SharePermission @default(READ)

  expiresAt DateTime
  usedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  owner User @relation("UserShareInvites", fields: [ownerUserId], references: [userId], onDelete: Cascade)

  @@index([ownerUserId])
  @@index([email])
  @@index([status])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  action    String   @db.VarChar(80)
  entity    String   @db.VarChar(80)
  entityId  Int?
  ip        String?  @db.VarChar(80)
  userAgent String?  @db.VarChar(255)
  method    String?  @db.VarChar(20)
  path      String?  @db.VarChar(255)
  status    Int?
  metadata  Json     @default("{}")
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [userId], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([entity, entityId])
  @@index([createdAt])
}
