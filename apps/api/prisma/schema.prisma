// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Article {
  articleId          Int     @id @default(autoincrement())
  articleNom         String  @db.VarChar(30)
  articleModele      String  @db.VarChar(30)
  articleDescription String? @db.VarChar(255)
  ownerUserId        Int     // Ownership field added in migration

  // Relations
  owner    User      @relation("ArticlesOwned", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  garantie Garantie?
  alertes  Alerte[]

  @@index([articleNom, articleModele])
  @@index([ownerUserId])
}

model Garantie {
  garantieId        Int      @id @default(autoincrement())
  garantieArticleId Int      @unique // 1–1 : une garantie par article
  garantieNom       String   @db.VarChar(30)
  garantieDateAchat DateTime
  garantieDuration  Int // mois
  garantieFin       DateTime
  garantieIsValide  Boolean  @default(true)
  garantieImage     String?  @db.VarChar(255)
  ownerUserId       Int      // Ownership field added in migration

  // Relations
  article Article @relation(fields: [garantieArticleId], references: [articleId], onDelete: Cascade)
  owner   User    @relation("WarrantiesOwned", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  alertes Alerte[]

  @@index([garantieFin])
  @@index([ownerUserId])
}

model Alerte {
  alerteId          Int      @id @default(autoincrement())
  alerteGarantieId  Int?
  alerteArticleId   Int?
  alerteNom         String   @db.VarChar(30)
  alerteDate        DateTime
  alerteDescription String?  @db.VarChar(255)

  // Relations (au moins une des deux au niveau métier)
  garantie Garantie? @relation(fields: [alerteGarantieId], references: [garantieId], onDelete: Cascade)
  article  Article?  @relation(fields: [alerteArticleId], references: [articleId], onDelete: Cascade)

  @@unique([alerteGarantieId, alerteDate], map: "uq_alerte_garantie_date")
  @@unique([alerteArticleId, alerteDate], map: "uq_alerte_article_date")
  @@index([alerteDate])
  @@index([alerteGarantieId])
  @@index([alerteArticleId])
}

model User {
  userId    Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relationships
  articlesOwned   Article[]        @relation("ArticlesOwned")
  warrantiesOwned Garantie[]       @relation("WarrantiesOwned")
  auditLogs       AuditLog[]
  sharesOwned     InventoryShare[] @relation("SharesOwned")
  sharesReceived  InventoryShare[] @relation("SharesReceived")
  shareInvites    ShareInvite[]
}

enum Role {
  USER
  POWER_USER
  ADMIN
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [userId], onDelete: SetNull)

  action   String @db.Text // Changed from VarChar(40) to match migration
  entity   String @db.Text // Changed from VarChar(40) to match migration
  entityId Int?
  metadata Json?

  ip        String? @db.Text // Changed from VarChar(64) to match migration
  userAgent String? @db.Text // Changed from 'ua' and VarChar(255) to match migration

  @@index([createdAt])
  @@index([userId])
}

enum SharePermission {
  RO
  RW
}

enum ShareInviteStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

model InventoryShare {
  shareId      Int             @id @default(autoincrement())
  ownerUserId  Int
  targetUserId Int
  permission   SharePermission @default(RO)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  owner  User @relation("SharesOwned", fields: [ownerUserId], references: [userId], onDelete: Cascade)
  target User @relation("SharesReceived", fields: [targetUserId], references: [userId], onDelete: Cascade)

  @@unique([ownerUserId, targetUserId])
  @@index([targetUserId])
}

model ShareInvite {
  inviteId    Int               @id @default(autoincrement())
  ownerUserId Int
  email       String
  permission  SharePermission   @default(RO)
  status      ShareInviteStatus @default(PENDING)
  token       String            @unique
  expiresAt   DateTime
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  owner User @relation(fields: [ownerUserId], references: [userId], onDelete: Cascade)

  @@index([email, status])
  @@index([ownerUserId, status])
}
