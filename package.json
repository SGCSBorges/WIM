{
  "name": "wim",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web",
    "packages/*"
  ],
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "postinstall": "echo \"Workspaces ready (install per app in next steps).\"",
    "build:web": "npm --workspace apps/web run build",
    "build:api": "npm --workspace apps/api run build",
    "render-build:web": "npm install --include=optional --workspaces && npm run build:web",
    "render-build:api": "npm ci --include=optional --workspaces && npm --workspace apps/api run render-build",
    "fmt": "echo \"(to be added)\"",
    "lint": "echo \"(to be added)\""
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
